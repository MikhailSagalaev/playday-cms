# Конфигурация базы данных
DATABASE_URL=postgresql://playday:password@localhost:5432/playday_cms
DB_HOST=localhost
DB_PORT=5432
DB_NAME=playday_cms
DB_USER=playday
DB_PASSWORD=your_secure_password_here

# JWT секреты
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d

# Настройки сервера
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS настройки
CORS_ORIGIN=https://your-site.tilda.ws
CORS_CREDENTIALS=true

# Настройки загрузки файлов
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp

# Airtable API (для миграции)
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Tilda интеграция
TILDA_PROJECT_ID=your_tilda_project_id
TILDA_MEMBERS_SECRET=your_tilda_members_secret

# Логирование
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# Безопасность
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Мониторинг
PM2_LOG_PATH=./logs
PM2_ERROR_LOG_PATH=./logs/error.log
PM2_OUT_LOG_PATH=./logs/out.log
